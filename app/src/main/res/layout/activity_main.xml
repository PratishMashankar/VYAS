<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Welcome to Home Library Management"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="92dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
        app:layout_constraintVertical_bias="1.0" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="309dp"
        android:layout_height="467dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/viewbooks"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="View Books" />

            <Button
                android:id="@+id/addbook"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Add Book" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="308dp">

            <Button
                android:id="@+id/lendbooks"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Lend Book" />

            <Button
                android:id="@+id/viewlentbooks"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="View Lent Books" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <Button
                android:id="@+id/bibcom"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="BibCom" />

            <Button
                android:id="@+id/recom"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="recommendation"
                android:textSize="12dp" />
        </TableRow>
    </TableLayout>

